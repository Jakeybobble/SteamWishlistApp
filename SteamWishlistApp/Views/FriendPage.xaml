<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamWishlistApp.Views.FriendPage"
             xmlns:views="clr-namespace:SteamWishlistApp.Views"
             xmlns:controls="clr-namespace:SteamWishlistApp.Controls">
    <VerticalStackLayout BackgroundColor="SlateGray">
        <!-- Bar! -->
        <controls:TopBarControl/>

        <!-- Content! -->
        <ScrollView Orientation="Vertical" Padding="30" VerticalOptions="FillAndExpand">
            <!-- FIXME: Scroll doesn't work. -->
            <VerticalStackLayout Spacing="20"  HorizontalOptions="Center" MaximumWidthRequest="960" MinimumWidthRequest="860">
                <!-- Name, add game input, -->
                <HorizontalStackLayout Spacing="10">
                    <Label FontSize="32" TextColor="White">Tomki</Label>
                    <Rectangle VerticalOptions="Fill" WidthRequest="10" BackgroundColor="Black" Opacity="0.2"></Rectangle>
                    <Entry Placeholder="App URL..." WidthRequest="200" BackgroundColor="Black" TextColor="White"></Entry>
                    <Button Text="Add game" BackgroundColor="LightSlateGray"></Button>
                    <Rectangle VerticalOptions="Fill" WidthRequest="10" BackgroundColor="Black" Opacity="0.2"></Rectangle>
                    <!-- TODO: Make link actually work when commands are added -->
                    <!-- https://learn.microsoft.com/en-us/dotnet/maui/user-interface/controls/label?view=net-maui-9.0#create-a-hyperlink -->
                    <Label VerticalOptions="Center" Opacity="0.7" TextDecorations="Underline" TextColor="White" >Remove friend</Label>
                </HorizontalStackLayout>
                <!-- Game entries -->
                <VerticalStackLayout Spacing="10">

                    <!-- Example entry for game on sale -->
                    <Border StrokeThickness="2" HeightRequest="215" HorizontalOptions="Fill" Stroke="Yellow">
                        <HorizontalStackLayout BackgroundColor="LightSlateGray" Padding="10" Spacing="10">
                            <Image Source="https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/1245620/header.jpg?t=1726158298"/>
                            <FlexLayout JustifyContent="SpaceBetween" Direction="Column">
                                <!-- Title, desc, etc... -->
                                <VerticalStackLayout>
                                    <!-- TODO: Link to game -->
                                    <Label TextColor="White" TextDecorations="Underline" FontSize="32">ELDEN RING</Label>
                                    <Label TextColor="White" Opacity="0.7">FromSoftware, Inc. | Bandai Namco Entertainment</Label>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label FontSize="30" TextColor="White">On sale!</Label>
                                    <!-- Price tag -->
                                    <Border HorizontalOptions="Start">
                                        <HorizontalStackLayout HeightRequest="50" Background="SlateGray">
                                            <StackLayout BackgroundColor="#3e5536" WidthRequest="90">
                                                <Label FontAttributes="Bold" FontSize="33" TextColor="#beee11" HorizontalOptions="Center" VerticalOptions="Center">-50%</Label>
                                            </StackLayout>
                                            <VerticalStackLayout VerticalOptions="Center" WidthRequest="76">
                                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Label FontSize="16" TextColor="White" Opacity="0.7" TextDecorations="Strikethrough">59,99€</Label>
                                                    <Label FontSize="16" TextColor="White">29,98€</Label>
                                                </VerticalStackLayout>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>
                                    </Border>
                                </VerticalStackLayout>
                            </FlexLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Example entry for game not on sale -->
                    <Border StrokeThickness="2" HeightRequest="215" HorizontalOptions="Fill">
                        <HorizontalStackLayout BackgroundColor="LightSlateGray" Padding="10" Spacing="10">
                            <Image Source="https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/2379780/header.jpg?t=1732730257"/>
                            <FlexLayout JustifyContent="SpaceBetween" Direction="Column">
                                <!-- Title, desc, etc... -->
                                <VerticalStackLayout>
                                    <!-- TODO: Link to game -->
                                    <Label TextColor="White" TextDecorations="Underline" FontSize="32">Balatro</Label>
                                    <Label TextColor="White" Opacity="0.7">LocalThunk | Playstack</Label>
                                </VerticalStackLayout>
                                <!-- Price tag -->
                                <Border HorizontalOptions="Start">
                                    <HorizontalStackLayout HeightRequest="50" Background="SlateGray">
                                        <VerticalStackLayout  VerticalOptions="Center" WidthRequest="76">
                                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label FontSize="16" TextColor="White">13,99€</Label>
                                            </VerticalStackLayout>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </Border>
                            </FlexLayout>
                        </HorizontalStackLayout>
                    </Border>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>